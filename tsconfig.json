{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",        // or "react" if using React 17
    "baseUrl": ".",            
    "skipLibCheck": true,
    "types": ["cypress", "@badeball/cypress-cucumber-preprocessor"]

  },
  "include": [
    "cypress",                 // ðŸ‘ˆ include all Cypress tests (component, e2e, etc)
    "src",                     // if you have source files
    "cypress.config.ts", 
    "cypress/**/*.ts", 
    "cypress/**/*.d.ts", 
    "cypress.config.ts"],

}

